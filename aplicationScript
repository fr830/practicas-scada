
{CONDICION DE QUE SOLO SE PUEDE BOMBEAR DE UN TANQUE}
IF ev1b==1 THEN
ev2b=0;
ev3b=0;
ev4b=0;

ENDIF;

IF ev2b==1 THEN
ev1b=0;
ev3b=0;
ev4b=0;

ENDIF;

IF ev3b==1  THEN
    ev2b=0;
ev1b=0;
ev4b=0;

ENDIF;

IF ev4b==1 THEN
    ev2b=0;
ev3b=0;
ev1b=0;
ENDIF;



